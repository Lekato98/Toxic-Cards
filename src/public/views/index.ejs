<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <script src="https://cdn.socket.io/4.2.0/socket.io.min.js"
            integrity="sha384-PiBR5S00EtOj2Lto9Uu81cmoyZqR57XcOna1oAuVuIEjzj0wpqDVfD0JA9eXlRsj"
            crossorigin="anonymous"></script>
    <title>Playing card</title>
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>
<div class="bg">
    <button onclick="createGame()">Create game</button>
    <button onclick="joinGame()">Join game</button>
    <button onclick="joinQueue()">Join queue</button>
    <button onclick="leaveGame()">Leave game</button>
    <button onclick="startGame()">Start Game</button>
    <button onclick="doAction()">Action</button>
    <div id="ping" style="color:green;position:fixed;top:0;left:0;margin: 5px">0ms</div>
    <div id="state" style="color: white">Game State</div>
    <div class="lalo">
        <div id="countdown">
            <div id="countdown-number"></div>
            <svg>
                <circle r="18" cx="20" cy="20"></circle>
            </svg>
        </div>
    </div>
    <div class="container">

        <div class="player p1">
            <span>1</span>
            <div class="card" style="background-image: url('images/poker-cards.png');"></div>
            <div class="card" style="background-image: url('images/poker-cards.png');"></div>
            <div class="card" style="background-image: url('images/poker-cards.png');"></div>
            <div class="card" style="background-image: url('images/poker-cards.png');"></div>
        </div>

        <div class="player p2">
            <span>2</span>
            <div class="card" style="background-image: url('images/poker-cards.png');"></div>
            <div class="card" style="background-image: url('images/poker-cards.png');"></div>
            <div class="card" style="background-image: url('images/poker-cards.png');"></div>
            <div class="card" style="background-image: url('images/poker-cards.png');"></div>
        </div>

        <div class="player p3">
            <span>3</span>
            <div class="card" style="background-image: url('images/poker-cards.png');"></div>
            <div class="card" style="background-image: url('images/poker-cards.png');"></div>
            <div class="card" style="background-image: url('images/poker-cards.png');"></div>
            <div class="card" style="background-image: url('images/poker-cards.png');"></div>
        </div>

        <div class="player p4">
            <span>4</span>
            <div class="card" style="background-image: url('images/poker-cards.png');"></div>
            <div class="card" style="background-image: url('images/poker-cards.png');"></div>
            <div class="card" style="background-image: url('images/poker-cards.png');"></div>
            <div class="card" style="background-image: url('images/poker-cards.png');"></div>
        </div>

        <div class="deck">
            <div id="burned" class="card" style="background-image: url('images/poker-cards.png');"></div>
            <div id="pile" class="card" style="background-image: url('images/poker-cards.png');"></div>
        </div>
    </div>

    <script src="js/index.js"></script>
</div>
</body>
</html>
